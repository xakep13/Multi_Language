@using Resources

@model IEnumerable<Test_Progect.Models.Book>

<h2>@Resource.Index</h2>

<p>
    <a asp-action="Create">@Resource.CreateNew</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Author)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Year)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Author)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Year)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">@Resource.Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">@Resource.Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">@Resource.Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

<script type="text/javascript">
    window.onload = function () {
        $.ajax({
            url: '/Home/GetAllBookJson',
            success: function (result) {
                console.log(result);
            }         
        });
    };

</script>
